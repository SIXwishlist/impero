                        <tbody>
                        <tr v-for="job in server.jobs">
                            <td>${ job.name }</td>
                            <td>${ job.command }</td>
                            <td>${ job.frequency }</td>
                            <td>${ job.status }</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
                <div role="tabpanel" class="tab-pane" id="logs">
                    <table class="table table-condensed table-striped">
                        <thead>
                        <tr>
                            <th>Log</th>
                            <th>Datetime</th>
                            <th>Description</th>
