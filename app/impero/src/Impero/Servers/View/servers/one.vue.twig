                            <table class="table table-condensed table-striped">
                                <thead>
                                <tr>
                                    <th>Website</th>
                                    <th>Application</th>
                                    <th>Url</th>
                                    <th>Https</th>
                                    <th>Version</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
