                            <table class="table table-condensed table-striped">
                                <thead>
                                <tr>
                                    <th>Dependency</th>
                                    <th>Version</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr v-for="dependency in server.dependencies">
                                    <td>${ dependency.name }</td>
                                    <td>${ dependency.version }</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h3>Available dependencies</h3>
                            <table class="table table-condensed table-striped">
                                <thead>
                                <tr>
                                    <th>Dependency</th>
                                    <th>Version</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr v-for="dependency in server.dependencies">
                                    <td>${ dependency.name }</td>
                                    <td>${ dependency.version }</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane" id="applications">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Applications</h3>
                            <table class="table table-condensed table-striped">
                                <thead>
                                <tr>
                                    <th>Application</th>
                                    <th>Type</th>
                                    <th>Source</th>
                                    <th>Version</th>
