                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane" id="services">
                    <div class="row">
                        <div class="col-md-6">
                            <h3>Installed services</h3>
                            <input type="button" value="Refresh services" @click="server.fetchServices.call(server)"/>
                            <table class="table table-condensed table-striped">
                                <thead>
                                <tr>
                                    <th>Service</th>
                                    <th>Version</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr v-for="service in installedServices">
                                    <td>${ service.name }</td>
                                    <td>${ service.installed == 'yes' ? service.version : '' }</td>
                                    <td>${ service.installed == 'yes' ? service.status : 'not installed' }</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <h3>Available services</h3>
                            <table class="table table-condensed table-striped">
                                <thead>
                                <tr>
                                    <th>Service</th>
                                    <th>Version</th>
                                    <th>Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr v-for="service in availableServices">
                                    <td>${ service.name }</td>
                                    <td>${ service.installed == 'yes' ? service.version : '' }</td>
                                    <td>${ service.installed == 'yes' ? service.status : 'not installed' }</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
